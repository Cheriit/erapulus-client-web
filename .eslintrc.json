{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "e2e",
                "onlyDependOnLibsWithTags": ["application"]
              },
              {
                "sourceTag": "application",
                "onlyDependOnLibsWithTags": [
                  "data-access",
                  "utils",
                  "ui",
                  "features"
                ]
              },
              {
                "sourceTag": "features",
                "onlyDependOnLibsWithTags": ["data-access", "utils", "ui"]
              },
              {
                "sourceTag": "data-access",
                "onlyDependOnLibsWithTags": ["utils", "ui"]
              },
              {
                "sourceTag": "ui",
                "onlyDependOnLibsWithTags": ["data-access", "utils", "ui"]
              },
              {
                "sourceTag": "utils",
                "onlyDependOnLibsWithTags": ["utils"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": [
        "plugin:@nrwl/nx/typescript",
        "plugin:@angular-eslint/recommended"
      ],

      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    },
    {
      "files": ["*.component.ts"],
      "extends": ["plugin:@angular-eslint/template/process-inline-templates"]
    }
  ]
}
