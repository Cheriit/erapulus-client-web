{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "directive",
  "type": "object",
  "description": "Creates directive",
  "properties": {
    "project": {
      "type": "string",
      "description": "Project name",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Directive project name:"
    },
    "module": {
      "type": "string",
      "description": "Module name",
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "x-prompt": "Directive module name:"
    },
    "name": {
      "type": "string",
      "description": "Directive name",
      "$default": {
        "$source": "argv",
        "index": 2
      },
      "x-prompt": "Directive name:"
    }
  },
  "required": [
    "project",
    "module",
    "name"
  ]
}
