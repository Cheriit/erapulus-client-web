{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@erapulus/data-access/erapulus": [
        "libs/data-access/erapulus/src/index.ts"
      ],
      "@erapulus/features/login": ["libs/features/login/src/index.ts"],
      "@erapulus/ui/assets": ["libs/ui/assets/src/index.ts"],
      "@erapulus/ui/components": ["libs/ui/components/src/index.ts"],
      "@erapulus/ui/sidebar-layout": ["libs/ui/sidebar-layout/src/index.ts"],
      "@erapulus/ui/themes": ["libs/ui/themes/src/index.ts"],
      "@erapulus/utils/auth": ["libs/utils/auth/src/index.ts"],
      "@erapulus/utils/forms": ["libs/utils/forms/src/index.ts"],
      "@erapulus/utils/helpers": ["libs/utils/helpers/src/index.ts"],
      "@erapulus/utils/local-storage": [
        "libs/utils/local-storage/src/index.ts"
      ],
      "@erapulus/utils/navigation": ["libs/utils/navigation/src/index.ts"],
      "@erapulus/utils/rest": ["libs/utils/rest/src/index.ts"],
      "@erapulus/utils/subscription-manager": [
        "libs/utils/subscription-manager/src/index.ts"
      ],
      "@erapulus/utils/title": ["libs/utils/title/src/index.ts"],
      "@erapulus/utils/translations": ["libs/utils/translations/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
